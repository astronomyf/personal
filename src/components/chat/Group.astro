---
import { Image } from "astro:assets";
import Avatar from "../../images/francesco-avatar.jpg";
---

<div class="flex h-fit w-full items-end gap-x-2 md:gap-x-3">
  <Image
    src={Avatar}
    alt="Portrait icon of Francesco Violante"
    class="w-5 h-5 md:w-6 md:h-6 rounded-full object-cover object-center [image-rendering:-webkit-optimize-contrast]"
    draggable={false}
  />
  <ul class="flex w-full justify-center flex-col gap-y-1.5">
    <slot />
  </ul>
</div>
