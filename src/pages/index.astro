---
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
import Seen from "../components/chat/Seen.astro";
import Articles from "../components/Articles.astro";
---

<Layout title="Francesco Violante">
  <main
    class="flex flex-col w-full h-full justify-center items-center p-4 md:p-8 py-28 md:py-32"
  >
    <div class="flex flex-col gap-y-3 max-w-[350px] md:max-w-[500px]">
      <div class="flex flex-col gap-y-8">
        <About />
        <Articles />
      </div>
      <Seen className="ml-[38px]" />
    </div>
  </main>
</Layout>

<style>
  main {
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }
</style>
