---
import Themes from "astro-themes";
import Navbar from "../components/Navbar.astro";
import "../styles/base.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Francesco Violante's personal portfolio"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    {/** @link https://github.com/alex-grover/astro-themes */}
    <Themes />

    <script src="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js"
    ></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="w-full h-14 md:h-12 bg-background blur-lg opacity-90 md:blur-0 md:opacity-100 md:bg-inherit md:from-background md:bg-gradient-to-b fixed z-10 -top-2"></div>
    <Navbar />
    <slot />
    <div
      class="w-full h-12 from-background bg-gradient-to-t fixed bottom-0 z-10"
    >
    </div>
    <script>import "preline/dist/preline.js";</script>
  </body>
</html>

<style is:global>
  :root {
    --background: #f9f9fb;
    --text: #1d2024;
    --border: #dddde2;
    --secondary: #61646b;
  }

  html {
    background-color: var(--background);
    color: var(--text);
    overflow-x: hidden;
  }

  [data-theme="dark"] {
    --background: #18181a;
    --text: #edeef0;
    --border: #35373c;
    --secondary: #aeb1b7;
  }
</style>
